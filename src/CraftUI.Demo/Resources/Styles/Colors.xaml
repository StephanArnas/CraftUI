    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#10b981</Color> <!-- Primary500 -->
    <Color x:Key="PrimaryDark">#059669</Color> <!-- Primary600 -->
    <Color x:Key="Secondary">#2dd4bf</Color>
    <Color x:Key="SecondaryDark">#2dd4bf</Color>
    <Color x:Key="SecondaryDarkText">#d4d4d4</Color>
    
    <Color x:Key="Danger">#E00034</Color>
    <Color x:Key="Success">#528922</Color>
    <Color x:Key="Warning">#DD732D</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

