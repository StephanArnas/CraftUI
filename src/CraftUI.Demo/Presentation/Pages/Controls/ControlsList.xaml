<?xml version="1.0" encoding="utf-8"?>
<base:ContentPageBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:CraftUI.Demo.Presentation.Common"
    xmlns:page="clr-namespace:CraftUI.Demo.Presentation.Pages.Controls" 
    x:Class="CraftUI.Demo.Presentation.Pages.Controls.ControlsList"
    x:DataType="page:ControlsListViewModel"
    Title="Controls">
    
    <ScrollView>
        <VerticalStackLayout
            Margin="32"
            Spacing="25">
            
            <Button
                Text="Button Demo" 
                Command="{Binding GoToButtonPageCommand}"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Entry Demo" 
                Command="{Binding GoToEntryPageCommand}"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Picker Demo" 
                Command="{Binding GoToPickerPageCommand}"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Picker with popup Demo" 
                Command="{Binding GoToPickerPopupPageCommand}"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>
    
</base:ContentPageBase>