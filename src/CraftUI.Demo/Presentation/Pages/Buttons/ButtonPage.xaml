<?xml version="1.0" encoding="utf-8"?>
<base:ContentPageBase 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CraftUI.Demo.Presentation.Pages.Buttons.ButtonPage"
    xmlns:page="clr-namespace:CraftUI.Demo.Presentation.Pages.Buttons"
    xmlns:base="clr-namespace:CraftUI.Demo.Presentation.Common"
    xmlns:controls="clr-namespace:CraftUI.Library.Maui.Controls;assembly=CraftUI.Library.Maui"
    Title="Button Demo"
    x:DataType="page:ButtonPageViewModel">
    
    <Grid RowDefinitions="*,Auto" > 
        <ScrollView>
            <VerticalStackLayout
                Margin="16, 32"
                Spacing="25">
                
                <controls:SaButton 
                    Text="Load 5s Data Demo"
                    IsLoading="{Binding DemoOneCommand.Notifier.ShowLoader}"
                    Command="{Binding DemoOneCommand}" />
                
                <controls:SaButton 
                    Text="Normal button" />
                
                <controls:SaButton 
                    Text="Disabled button"
                    IsEnabled="False" />
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</base:ContentPageBase>